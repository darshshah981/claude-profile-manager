{
  "name": "profile-switcher",
  "version": "1.0.0",
  "description": "Switch between personal and corporate Claude Code profiles with automatic settings sync",
  "author": "Darsh Shah",
  "license": "MIT",
  "commands": [
    {
      "name": "switch-personal",
      "description": "Switch to personal Claude profile",
      "file": "commands/switch-personal.md"
    },
    {
      "name": "switch-corporate",
      "description": "Switch to corporate Claude profile",
      "file": "commands/switch-corporate.md"
    },
    {
      "name": "profile-setup",
      "description": "Configure profile switcher for your organization",
      "file": "commands/profile-setup.md"
    },
    {
      "name": "profile-status",
      "description": "Show current profile and configuration",
      "file": "commands/profile-status.md"
    }
  ],
  "settings": {
    "type": "object",
    "properties": {
      "corporateGatewayUrl": {
        "type": "string",
        "description": "Corporate gateway URL (e.g., https://live.ai.epicgames.com)",
        "default": ""
      },
      "corporateNpmRegistry": {
        "type": "string",
        "description": "Corporate npm registry URL",
        "default": ""
      },
      "apiKeyHelperPath": {
        "type": "string",
        "description": "Path to corporate API key helper script",
        "default": ""
      },
      "syncSettings": {
        "type": "array",
        "description": "Settings to sync between profiles",
        "items": {
          "type": "string",
          "enum": ["enabledPlugins", "mcpServers", "alwaysThinkingEnabled"]
        },
        "default": ["enabledPlugins", "mcpServers"]
      },
      "customNpmCommands": {
        "type": "object",
        "description": "Custom npm configuration commands for corporate profile",
        "properties": {
          "onSwitchToCorporate": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "onSwitchToPersonal": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          }
        }
      }
    }
  }
}
